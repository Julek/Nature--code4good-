<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/nature1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="right"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/my_nature"
            android:layout_width="287dp"
            android:layout_height="88dp"
            android:contentDescription="your nature"
            android:scaleType="fitXY"
            android:src="@drawable/tile1" />

        <ImageView
            android:id="@+id/their_nature"
            android:layout_width="273dp"
            android:layout_height="110dp"
            android:contentDescription="their nature"
            android:scaleType="fitXY"
            android:src="@drawable/tile3" />

        <ImageView
            android:id="@+id/augumented_reality"
            android:layout_width="260dp"
            android:layout_height="78dp"
            android:contentDescription="augumented reality"
            android:scaleType="fitXY"
            android:src="@drawable/augumented_reality" />

    </LinearLayout>

</RelativeLayout>